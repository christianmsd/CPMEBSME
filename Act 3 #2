#include <iostream>
#include <cstdlib>
#include <iomanip>
using namespace std;

int main() {
    double action;
    double balance = 1000;
    double amount;

    do {
        system("cls");

        cout << "------------------------------------\n";
        cout << "|        GCASH MODDED APK          |\n";
        cout << "|         (unlimited money)        |\n";
        cout << "------------------------------------\n";
        cout << "[1] Deposit\n";
        cout << "[2] Withdraw\n";
        cout << "[3] Check Balance\n";
        cout << "[4] Exit\n";
        cout << "-----------------------------------\n";
        cout << "      Enter your action: ";
        cin >> action;

        system("cls");

        if (action == 1) {
            // Deposit
            cout << "Enter amount to deposit: ";
            cin >> amount;

            if (amount <= 0) {
                cout << "Invalid amount! Are you broke?!.\n";
            }
            else {
                balance += amount;
                cout << "Successfully deposited PHP " << fixed << setprecision(2) << amount << endl;
            }
        }
        else if (action == 2) {
            // Withdraw
            cout << "Enter amount to withdraw (only dispenses PHP 100 bills): ";
            cin >> amount;

            if (amount >= 10000000000) {
                cout << "Withdrawal limit for cash is only below PHP 10,000,000,000.00. Are you from DPWH???!\n";
                system("pause");
                continue;
            }
            if (amount <= 0) {
                cout << "Invalid amount!\n";
            }
            else if (amount != (int)amount) {
                    cout << "Amount must be a whole number! No decimals allowed.\n";
            }
            else if ((int)amount % 100 != 0) {
                cout << "Withdrawal must be in multiples of PHP 100!\n";
            }
            else if (balance - amount < 0) {
                cout << "Cannot withdraw! You're broke!!\n";
            }
            else {
                balance -= amount;
                cout << "Successfully withdrawn PHP " << amount << endl;
            }
        }
        else if (action == 3) {
            // Check Balance
            cout << "Your current balance is: PHP " << balance << endl;
        }
        else if (action == 4) {
            cout << "Thank you for your money!\n";
        }
        else {
            cout << "Invalid action! Try again.\n";
        }

        cout << endl;
        system("pause");

    } while (action != 4);

    return 0;
}
