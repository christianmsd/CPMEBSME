#include <iostream>
using namespace std;

int main() {
    float month, day, decimalyear;

    // Input
    cout << "Enter month: ";
    cin >> month;
    float originalMonth = month;
    month = month / 1;  // check decimal
    if (month != originalMonth) {
        cout << "INVALID DATE";
        return 0;
    }

    cout << "Enter day: ";
    cin >> day;
    float originalDay = day;
    day = day / 1;  // check decimal
    if (day != originalDay) {
        cout << "INVALID DATE";
        return 0;
    }

    cout << "Enter year: ";
    cin >> decimalyear;
    int year = (decimalyear / 1);  // your original logic
    if (year != decimalyear) {
        cout << "INVALID DATE";
        return 0;
    }

    // Gregorian Calendar check
    if (year < 1582 || (year == 1582 && (month < 10 || (month == 10 && day < 15)))) {
        cout << "INVALID DATE";
        return 0;
    }

    // Month validity
    if (month < 1 || month > 12) {
        cout << "INVALID DATE";
        return 0;
    }

    // Days in month
    int daysInMonth;
    if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12) {
        daysInMonth = 31;
    } else if (month == 4 || month == 6 || month == 9 || month == 11) {
        daysInMonth = 30;
    } else { // February
        bool leap = (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
        daysInMonth = leap ? 29 : 28;
    }

    // Day validity
    if (day < 1 || day > daysInMonth) {
        cout << "INVALID DATE";
        return 0;
    }

    // Month name
    string months[] = {"January","February","March","April","May","June",
                       "July","August","September","October","November","December"};
    string monthName = months[(int)month - 1];

    cout << monthName << " " << (int)day << ", " << year << endl;

    // Zodiac
    string zodiac;
    if ((month == 12 && day >= 22) || (month == 1 && day <= 19))
        zodiac = "Capricorn";
    else if ((month == 1 && day >= 20) || (month == 2 && day <= 18))
        zodiac = "Aquarius";
    else if ((month == 2 && day >= 19) || (month == 3 && day <= 20))
        zodiac = "Pisces";
    else if ((month == 3 && day >= 21) || (month == 4 && day <= 19))
        zodiac = "Aries";
    else if ((month == 4 && day >= 20) || (month == 5 && day <= 20))
        zodiac = "Taurus";
    else if ((month == 5 && day >= 21) || (month == 6 && day <= 20))
        zodiac = "Gemini";
    else if ((month == 6 && day >= 21) || (month == 7 && day <= 22))
        zodiac = "Cancer";
    else if ((month == 7 && day >= 23) || (month == 8 && day <= 22))
        zodiac = "Leo";
    else if ((month == 8 && day >= 23) || (month == 9 && day <= 22))
        zodiac = "Virgo";
    else if ((month == 9 && day >= 23) || (month == 10 && day <= 22))
        zodiac = "Libra";
    else if ((month == 10 && day >= 23) || (month == 11 && day <= 21))
        zodiac = "Scorpio";
    else
        zodiac = "Sagittarius";

    cout << zodiac << endl;

    return 0;
}
