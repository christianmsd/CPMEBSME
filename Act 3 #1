#include <iostream>
using namespace std;

int main() {
    double A, B;
    
    cout << "Input dividend: ";
    cin >> A;
    
    cout << "Input divisor: ";
    cin >> B;
    
    if (A == 0 && B == 0) {
        cout << "Remainder: Indeterminate";
        return 0;
    }
    else if (B == 0) { 
        cout << "Remainder: Undefined"; 
        return 0;
    }

    // CASE 1: A >= 0, B >= 0
    else if (A >= 0 && B >= 0) {
        while (A >= B) {
            A = A - B;
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 2: A < 0, B > 0
    else if (A < 0 && B > 0) {
        double C = -1 * B;  
        while (A <= C) {
            A = A + B;
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 3: A >= 0, B < 0  
    else if (A >= 0 && B < 0) {
        double C = -1 * B;  
        while (A >= C) {    
            A = A + B;      
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 4: A < 0, B < 0  
    else if (A < 0 && B < 0) {
        while (A <= B) {        
            A = A - B;           
        }
        cout << "Remainder: " << A;
        return 0;
    }
}
