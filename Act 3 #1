#include <iostream>
using namespace std;

int main() {
    string sA, sB;
    double A, B;

    cout << "Input dividend: ";
    cin >> sA;

    cout << "Input divisor: ";
    cin >> sB;

    // -0 Filter
    if (sA == "-0" || sB == "-0") {
        cout << "Remainder: Invalid";
        return 0;
    }

    // String to Double
    A = stod(sA);
    B = stod(sB);

    // CASE 1: A = B = 0
    if (A == 0 && B == 0) {
        cout << "Remainder: Indeterminate";
        return 0;
    }

    // CASE 2: A >= 0, B >= 0
    if (A >= 0 && B >= 0) {
        while (A >= B && B != 0) {
            A = A - B;
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 3: A < 0, B > 0
    else if (A < 0 && B > 0) {
        double C = -B;
        while (A <= C) {
            A = A + B;
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 4: A >= 0, B < 0
    else if (A >= 0 && B < 0) {
        double C = -B;
        while (A >= C) {
            A = A + B;
        }
        cout << "Remainder: " << A;
        return 0;
    }

    // CASE 5: A < 0, B < 0
    else if (A < 0 && B < 0) {
        while (A <= B) {
            A = A - B;
        }
        cout << "Remainder: " << A;
        return 0;
    }
}
